# Node environment
NODE_ENV=development

# Telegram Bot Token
BOT_TOKEN=your-telegram-bot-token-here

# MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/study-tracker

# Xabar yuborish vaqti (24 soat formatda, HH:MM)
# Masalan: 18:00 yoki 20:00
DAILY_REPORT_TIME=18:00

# Telegram rate limit sozlamalari
# Har bir xabar orasidagi kutish vaqti (millisekund)
MESSAGE_DELAY_MS=50

# Batch hajmi (bir vaqtda nechta xabar yuboriladi)
BATCH_SIZE=25

# Batch orasidagi kutish vaqti (millisekund)
BATCH_DELAY_MS=1000

# Timezone (Toshkent uchun)
TIMEZONE=Asia/Tashkent

# Dashboard URL
DASHBOARD_URL=http://localhost:3000